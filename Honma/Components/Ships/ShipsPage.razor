@attribute [Route(Routes.Ships)]
@inherits FluxorComponent

<MudContainer MaxWidth="MaxWidth.Small">
    <AppSurface>
        <MudStack Spacing="4">
            <ListHeader Icon="@HonmaIcons.Ship"
                        Page="_page"
                        PageChanged="PageChanged"
                        Pagination="State.Value.Pagination"
                        Title="Ships"/>

            <MudDivider DividerType="DividerType.Middle"
                        Light/>

            <MudList T="string">
                @foreach (var ship in State.Value.Ships)
                {
                    <MudListItem Class="rounded-lg"
                                 Href="@($"{Routes.Ships}/{ship.Symbol}")"
                                 T="string">
                        <ChildContent>
                            <MudStack AlignItems="AlignItems.Center"
                                      Justify="Justify.SpaceBetween"
                                      Row>
                                <MudStack AlignItems="AlignItems.Center"
                                          Class="width-full"
                                          Justify="Justify.SpaceBetween"
                                          Row>
                                    <MudText>
                                        <b>@ship.Symbol</b>
                                    </MudText>

                                    <MudStack AlignItems="AlignItems.Center"
                                              Row>
                                        <MudChip Color="Color.Secondary"
                                                 Size="Size.Small"
                                                 T="string"
                                                 Variant="Variant.Text">
                                            @ship.Registration.Role
                                        </MudChip>
                                    </MudStack>
                                </MudStack>

                                <MudIcon Icon="@HonmaIcons.CaretRight"
                                         Size="Size.Small"/>
                            </MudStack>
                        </ChildContent>
                    </MudListItem>
                }
            </MudList>
        </MudStack>

    </AppSurface>
</MudContainer>

@code {

    [Inject] public required IState<ShipState> State { get; set; }

    [Inject] public required IDispatcher Dispatcher { get; set; }

    private int _page = 1;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Dispatcher.Dispatch(new ShipsLoad(_page));
    }

    private void PageChanged(int page)
    {
        _page = page;
        Dispatcher.Dispatch(new ShipsLoad(_page));
    }

}