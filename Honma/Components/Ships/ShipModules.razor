<MudGrid>
    @foreach (var module in Modules)
    {
        <MudItem xs="4">
            <MudPaper Class="pa-4 rounded-lg"
                      Elevation="2">
                <ShipPartCard Part="module"/>
            </MudPaper>
        </MudItem>
    }
</MudGrid>

@code {

    [Parameter] public required IReadOnlyCollection<ShipModule> Modules { get; set; }

}