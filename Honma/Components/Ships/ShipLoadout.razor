<MudGrid>
    @foreach (var part in (ShipPart[]) [Ship.Frame, Ship.Reactor, Ship.Engine])
    {
        <MudItem xs="4">
            <AppSurface Light>
                <ShipPartCard Part="part"/>
            </AppSurface>
        </MudItem>
    }
</MudGrid>

@code {

    [Parameter] public required Ship Ship { get; set; }

}