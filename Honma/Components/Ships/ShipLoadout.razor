<MudGrid>
    <MudItem xs="4">
        <MudPaper Class="pa-4 rounded-lg"
                  Elevation="2">
            <ShipPartCard Frame="Ship.Frame"/>
        </MudPaper>
    </MudItem>
    <MudItem xs="4">
        <MudPaper Class="pa-4 rounded-lg"
                  Elevation="2">
            <ShipPartCard Reactor="Ship.Reactor"/>
        </MudPaper>
    </MudItem>
    <MudItem xs="4">
        <MudPaper Class="pa-4 rounded-lg"
                  Elevation="2">
            <ShipPartCard Engine="Ship.Engine"/>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    [Parameter] public required Ship Ship { get; set; }

}