<AppSurface>
    <MudStack Spacing="4">
        <MudList SelectedValue="SelectedShip"
                 SelectedValueChanged="@((Ship? ship) => SelectedShipChanged.InvokeAsync(ship))"
                 SelectionMode="SelectionMode.SingleSelection"
                 T="Ship?">
            <MudStack Spacing="1">
                @foreach (var ship in Ships)
                {
                    <MudListItem Class="rounded-lg"
                                 T="Ship?"
                                 Value="ship">
                        <MudStack AlignItems="AlignItems.Center"
                                  Justify="Justify.SpaceBetween"
                                  Row>
                            <MudText>
                                <b>@ship.Registration.Name</b>
                            </MudText>
                            <MudChip Color="Color.Secondary"
                                     Size="Size.Small"
                                     T="string"
                                     Variant="Variant.Text">
                                @ship.Registration.Role
                            </MudChip>
                        </MudStack>

                    </MudListItem>
                }
            </MudStack>
        </MudList>
    </MudStack>
</AppSurface>

@code {

    [Parameter] public required IReadOnlyCollection<Ship> Ships { get; set; }

    [Parameter] public Ship? SelectedShip { get; set; }

    [Parameter] public EventCallback<Ship?> SelectedShipChanged { get; set; }

}