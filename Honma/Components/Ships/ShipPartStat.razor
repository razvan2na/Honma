<MudStack Row
          Spacing="1"
          AlignItems="AlignItems.Center">
        <MudText Typo="Typo.subtitle2">@(AddedValue ? "+" : "")@Value</MudText>
    <MudIcon Icon="@Icon"
             Size="Size.Small"/>
    <MudText Typo="Typo.subtitle2">@Name</MudText>
</MudStack>

@code {

    [Parameter] public required string Name { get; set; }

    [Parameter] public required string Icon { get; set; }

    [Parameter] public required int Value { get; set; }

    [Parameter] public bool AddedValue { get; set; }

}