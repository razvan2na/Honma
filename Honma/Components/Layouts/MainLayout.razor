@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode
                  Theme="HonmaTheme.Get"/>

<MudLayout>
    <AppBar/>

    <MudDrawer Class="honma-main-drawer ml-4 mt-4 rounded-lg"
               ClipMode="DrawerClipMode.Always"
               Elevation="0"
               Variant="DrawerVariant.Mini">
        <NavigationMenu/>
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="mb-8 mt-4 pl-8 pr-4"
                      Fixed
                      Gutters="false"
                      MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>