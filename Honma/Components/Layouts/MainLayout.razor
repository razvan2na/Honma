@inherits LayoutComponentBase

<MudThemeProvider Theme="HonmaTheme.Get"/>

<MudLayout>
    <AppBar/>

    <AuthorizeView>
        <Authorized>
            <MudDrawer Class="honma-main-drawer ml-2 mt-2 rounded-lg"
                       ClipMode="DrawerClipMode.Always"
                       Elevation="2"
                       Variant="DrawerVariant.Mini">
                <NavigationMenu/>
            </MudDrawer>
        </Authorized>
    </AuthorizeView>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    [Inject] private IDispatcher Dispatcher { get; set; } = null!;

    protected override void OnInitialized()
    {
        Dispatcher.Dispatch(new UserAgentInitialize());
    }
}