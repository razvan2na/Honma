@attribute [Route(Routes.Login)]
@inherits FluxorComponent

<MudContainer Class="height-screen"
              MaxWidth="MaxWidth.Small">
    <MudStack AlignItems="AlignItems.Center"
              Class="height-full"
              Justify="Justify.Center"
              Spacing="8">
        <MudPaper Class="pa-4 rounded-lg width-full"
                  Elevation="0">
            <AgentRegister/>
        </MudPaper>

        <MudText>OR</MudText>

        <MudPaper Class="pa-4 rounded-lg width-full"
                  Elevation="0">
            <AgentTokenLogin/>
        </MudPaper>
    </MudStack>
</MudContainer>

@code
{

    [Inject] public required NavigationManager NavigationManager { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        SubscribeToAction<UserAgentUpdated>(_ => NavigationManager.NavigateTo(Routes.Home));
    }

}