<MudStack AlignItems="AlignItems.Center"
          Justify="Justify.SpaceBetween"
          Row>
    <MudStack Spacing="0">
        <TextWithIcon Icon="@_icon"
                      Text="@_type"/>
        <MudText>@_name</MudText>
    </MudStack>
    <MudStack AlignItems="AlignItems.Center"
              Row>
        @if (Part.IsFrame)
        {
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.FuelCapacity"/>
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.ModuleSlots"/>
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.MountingPoints"/>
        }

        @if (Part.IsReactor)
        {
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.PowerOutput"/>
        }

        @if (Part.IsEngine)
        {
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.Speed"/>
        }

        @if (Part.IsModule)
        {
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.Capacity"/>
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.Range"/>
        }

        @if (Part.IsMount)
        {
            <ShipPartSpecificationDisplay Part="Part"
                                          Specification="ShipPartSpecification.Strength"/>
        }
    </MudStack>
</MudStack>

@code {

    [Parameter] public required ShipPart Part { get; set; }

    private string _type = string.Empty;
    private string _icon = string.Empty;
    private string _name = string.Empty;

    protected override void OnParametersSet()
    {
        _type = Part.Match(
            _ => "Frame",
            _ => "Reactor",
            _ => "Engine",
            _ => "Module",
            _ => "Mount"
        );

        _icon = Part.Match(
            _ => PhosphorIcons.Frame,
            _ => PhosphorIcons.Reactor,
            _ => PhosphorIcons.Engine,
            _ => PhosphorIcons.DiamondsFour,
            _ => PhosphorIcons.Memory
        );

        _name = Part.Match(
            frame => frame.Name,
            reactor => reactor.Name,
            engine => engine.Name,
            module => module.Name,
            mount => mount.Name
        );
    }

}