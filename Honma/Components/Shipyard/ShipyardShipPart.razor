<MudStack AlignItems="AlignItems.Center"
          Justify="Justify.SpaceBetween"
          Row>
    <MudStack Spacing="0">
        <TextWithIcon Icon="@Part.Icon"
                      Text="@Part.TypeName"/>
        <MudText>@Part.Name</MudText>
    </MudStack>
    <MudStack AlignItems="AlignItems.Center"
              Row>
        @foreach (var specification in Enum.GetValues<ShipPartSpecification>())
        {
            <ShipPartSpecificationDisplay HideText
                                          Part="Part"
                                          Specification="specification"/>
        }
    </MudStack>
</MudStack>

@code {

    [Parameter] public required ShipPart Part { get; set; }

}