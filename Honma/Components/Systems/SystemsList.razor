<MudList T="string">
    @foreach (var system in Systems)
    {
        <MudListItem Class="rounded-lg"
                     OnClick="@(() => SystemClicked.InvokeAsync(system))">
            <ChildContent>
                <MudStack AlignItems="AlignItems.Center"
                          Justify="Justify.SpaceBetween"
                          Row>
                    <MudStack AlignItems="AlignItems.Center"
                              Class="width-full"
                              Justify="Justify.SpaceBetween"
                              Row>
                        <MudText>
                            <b>@system.Symbol</b>
                        </MudText>

                        <MudStack AlignItems="AlignItems.Center"
                                  Row>
                            <MudChip Color="Color.Tertiary"
                                     Size="Size.Small"
                                     T="string"
                                     Variant="Variant.Text">
                                @system.Type.Replace('_', ' ')
                            </MudChip>
                        </MudStack>
                    </MudStack>

                    <MudIcon Icon="@HonmaIcons.CaretRight"
                             Size="Size.Small"/>
                </MudStack>
            </ChildContent>
        </MudListItem>
    }
</MudList>

@code {

    [Parameter] public required List<SystemDto> Systems { get; set; }

    [Parameter] public EventCallback<SystemDto> SystemClicked { get; set; }

}