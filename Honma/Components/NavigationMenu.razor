<MudNavMenu Class="my-2"
            Color="Color.Primary"
            Margin="Margin.Normal">

    <MudTooltip Arrow
                Placement="Placement.Right"
                Text="Home">
        <MudNavLink Href="@Routes.Home"
                    Icon="@HonmaIcons.Home"
                    Match="NavLinkMatch.All">
            Home
        </MudNavLink>
    </MudTooltip>

    <MudDivider Class="my-2"
                DividerType="DividerType.Middle"/>

    <AuthorizeView>
        <Authorized>
            <MudTooltip Arrow
                        Placement="Placement.Right"
                        Text="Dashboard">
                <MudNavLink Href="@Routes.Dashboard"
                            Icon="@HonmaIcons.Dashboard"
                            Match="NavLinkMatch.All">
                    Dashboard
                </MudNavLink>
            </MudTooltip>

            <MudTooltip Arrow
                        Placement="Placement.Right"
                        Text="Ships">
                <MudNavLink Href="@Routes.Ships"
                            Icon="@HonmaIcons.Ship"
                            Match="NavLinkMatch.All">
                    Ships
                </MudNavLink>
            </MudTooltip>

            <MudTooltip Arrow
                        Placement="Placement.Right"
                        Text="Contracts">
                <MudNavLink Href="@Routes.Contracts"
                            Icon="@HonmaIcons.Contract"
                            Match="NavLinkMatch.All">
                    Contracts
                </MudNavLink>
            </MudTooltip>

            <MudTooltip Arrow
                        Placement="Placement.Right"
                        Text="Systems">
                <MudNavLink Href="@Routes.Systems"
                            Icon="@HonmaIcons.System"
                            Match="NavLinkMatch.All">
                    Systems
                </MudNavLink>
            </MudTooltip>

            <MudDivider Class="my-2"
                        DividerType="DividerType.Middle"/>
        </Authorized>
    </AuthorizeView>

    <MudTooltip Arrow
                Placement="Placement.Right"
                Text="Factions">
        <MudNavLink Href="@Routes.Factions"
                    Icon="@HonmaIcons.Faction"
                    Match="NavLinkMatch.All">
            Factions
        </MudNavLink>
    </MudTooltip>

    <MudTooltip Arrow
                Placement="Placement.Right"
                Text="Agent History">
        <MudNavLink Href="@Routes.AgentHistory"
                    Icon="@HonmaIcons.AgentHistory"
                    Match="NavLinkMatch.All">
            Agent History
        </MudNavLink>
    </MudTooltip>
</MudNavMenu>