<AppSurface>
    <MudStack>
        <MudStack Class="ml-4"
                  Row>
            <MudIcon Class="mt-1"
                     Icon="@HonmaIcons.Announcement"/>
            <MudStack Spacing="0">
                <MudText Typo="Typo.h6">Announcements</MudText>
                <MudText Typo="Typo.subtitle2">From the official SpaceTraders server</MudText>
            </MudStack>
        </MudStack>

        <MudDivider/>

        <MudStack>
            @foreach (var announcement in Announcements)
            {
                <MudStack Spacing="0">
                    <MudAlert Class="rounded-lg">
                        <b>@announcement.Title</b>
                    </MudAlert>
                    <MudText Class="ml-13 mr-4">@announcement.Body</MudText>
                </MudStack>
            }
        </MudStack>
    </MudStack>
</AppSurface>

@code {

    [Parameter] public required List<Announcement> Announcements { get; set; }

}