<MudStack AlignItems="AlignItems.Center"
          Row
          Spacing="1">
    <MudText Typo="@Typo">
        @Amount
    </MudText>
    <MudIcon Color="Color.Secondary"
             Icon="@HonmaIcons.Credits"
             Size="@IconSize"/>
</MudStack>

@code {

    [Parameter] public required long Amount { get; set; }

    [Parameter] public Typo Typo { get; set; } = Typo.body1;

    [Parameter] public Size IconSize { get; set; } = Size.Medium;

}